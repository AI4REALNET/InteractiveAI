# syntax=docker/dockerfile:1

FROM python:3.11.6-alpine

RUN mkdir /code
RUN mkdir /cab_common

COPY ./context-service/ /code/
COPY ./cab_common/ /cab_common/

WORKDIR /code

RUN pip3 install -r requirements.txt

WORKDIR /cab_common

RUN pip3 install .

WORKDIR /code

CMD ["flask", "run", "--host=0.0.0.0", "--reload"]

